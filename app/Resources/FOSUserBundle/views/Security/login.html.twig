{% extends "FitbitCoreBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form id="formulaire" action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <label class="labelForm" for="username" >Username : </label>
    <input class="inputForm"  type="text" name="_username" value="{{ last_username }}" required="required" />
    <br/>
    <label for="password" class="labelForm">Password : </label>
    <input type="password" id="password" class="inputForm" name="_password" required="required" />
    <br/>
    <label for="remember_me" class="labelForm">Remember me :</label>
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <br/>
    <input class="login" type="submit" id="_submit" name="_submit" value="Login" />
</form>
    <br/>
    <a id="register" href="{{ path("fos_user_registration_register") }}">Register</a>
{% endblock fos_user_content %}
